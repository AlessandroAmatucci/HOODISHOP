@model HoodiShop.Models.LoginModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_BaseLayoutPage.cshtml";
}

<h2>Login</h2>
<div id="formContent">
    @using (Html.BeginForm("Login", "Home", FormMethod.Post))
    {
        <div>
            <label for="Username">Inserisci nome utente</label>
            @Html.TextBoxFor(t => t.Username, new { @class = "form-control fadeIn second", placeholder = "Inserisci utente" })
        </div>
        <div>
            <label for="Username">Inserisci password</label>
            @Html.TextBoxFor(t => t.Password, new { @class = "form-control fadeIn second", placeholder = "Inserisci password" })
        </div>
        <input type="submit" />
    }
</div>

