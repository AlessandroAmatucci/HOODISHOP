    <script>
        var audio;
        var audioCaricato = false;
        function audioPlay(filename) {
            if (audioCaricato == true) {
                stop();
            } else {
                audioCaricato = true;
            }
            audioPath = '/Audio/Demos/' + String(filename) + '.mp3';
            audio = new Audio(audioPath);
            audio.play();
        };
        function stop() {
            audio.pause();
        };
        function audioContinue() {
            audio.play();
        }
    </script>

